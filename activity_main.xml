<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/DigiteSeuSalarioid"
        android:layout_width="375dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Digite seu salário(R$)"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="4dp" />

    <RadioButton
        android:id="@+id/Percentual01id"
        android:layout_width="355dp"
        android:layout_height="55dp"
        android:text="40%"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="127dp" />

    <RadioButton
        android:id="@+id/Percentual02id"
        android:layout_width="357dp"
        android:layout_height="60dp"
        android:text="45%"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="182dp" />

    <RadioButton
        android:id="@+id/Percentual03id"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:text="50%"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="242dp" />

    <TextView
        android:id="@+id/QualPercentualid"
        android:layout_width="392dp"
        android:layout_height="50dp"
        android:text="Qual será o percentual?"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="77dp" />


</android.support.constraint.ConstraintLayout>